<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="10dp"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_purchase_product_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Nombre producto"
            android:textColor="@color/orange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/amount_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_purchase_product_name_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="29dp"
            android:text="Cantidad"
            android:textColor="@color/grey_l"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/info_purchase_product_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_purchase_product_name_text"
            android:layout_alignBaseline="@id/amount_tag"
            android:layout_marginStart="15dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/amount_tag"
            android:text="0.00€"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/info_purchase_product_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="0.00 €"
            android:textColor="@color/orange"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_purchase_product_price_text"
            android:layout_alignBaseline="@id/info_purchase_total_product_price_text"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/info_purchase_total_product_price_text"
            android:text="Subtotal"
            android:textColor="@color/grey_l"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/info_purchase_total_product_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_purchase_product_price_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="0.00€"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>